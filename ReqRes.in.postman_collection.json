		{
			"name": "List a single user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response time is less than 2000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});",
							"",
							"const responseData = pm.response.json();",
							"const userID = pm.environment.get(\"userID\")",
							"",
							"pm.test(\"Correct user Fetched\", function () {",
							"    pm.expect(responseData.data.id).to.eql(userID);",
							"});",
							"",
							"pm.test(\"Response body contains id, email, first_name and last_name\", function () {",
							"  pm.expect(responseData).to.be.an('object');",
							"  pm.expect(responseData.data.id).to.exist;",
							"  pm.expect(responseData.data.email).to.exist;",
							"  pm.expect(responseData.data.first_name).to.exist;",
							"  pm.expect(responseData.data.last_name).to.exist;",
							"});",
							"",
							"",
							"pm.test(\"Validate the user's email format\", function () {",
							"  ",
							"  pm.expect(responseData).to.be.an('object');",
							"  pm.expect(responseData.data.email).to.exist.and.to.be.a('string').and.to.match(/^.+@.+\\..+$/);",
							"});",
							"",
							"",
							"pm.test(\"Verify that the response body matches the expected schema for user details\", function () {",
							"    pm.expect(responseData).to.be.an('object');",
							"    pm.expect(responseData.data.id).to.be.a('number');",
							"    pm.expect(responseData.data.first_name).to.be.a('string');",
							"    pm.expect(responseData.data.email).to.match(/^.+@.+$/);",
							"    //pm.expect(responseData.age).to.be.a('number');",
							"});",
							"",
							"pm.test(\"Ensure that the response body does not contain any sensitive information\", function () {",
							"",
							"    pm.expect(responseData).to.not.have.any.keys('password', 'creditCardNumber', 'ssn', 'personalIdentificationNumber', 'securityQuestionAnswer');",
							"});",
							"",
							"",
							""
